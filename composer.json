{
  "name": "helppc/serializer",
  "homepage": "http://tirus.cz",
  "description": "",
  "keywords": [
    "json",
    "xml",
    "binaryContent"
  ],
  "type": "library",
  "authors": [
    {
      "name": "Tomas Kulhanek",
      "homepage": "https://tirus.cz"
    }
  ],
	"config": {
		"optimize-autoloader": true,
		"preferred-install": {
			"*": "dist"
		},
		"sort-packages": true,
		"platform": {
			"php": "8.0.3"
		}
	},
  "require": {
    "php": ">=8.0",
    "jms/serializer": "^3.12",
    "ramsey/uuid": "^4.1",
    "symfony/yaml": "^5.2"
  },
  "autoload": {
    "psr-4": {
      "HelpPC\\Serializer\\": "src/"
    }
  },
  "suggest": {
    "ext-xml": "for parsing xml"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12",
    "nette/tester": "^2.0"
  }
}
